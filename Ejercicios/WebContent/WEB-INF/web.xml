<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LibroController</servlet-name>
        <servlet-class>Ejercicios2.controller.LibroController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>Ejercicios2.controller.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexLibro</servlet-name>
        <servlet-class>Ejercicios2.controller.IndexLibro</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LibroController</servlet-name>
        <url-pattern>/LibroController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexLibro</servlet-name>
        <url-pattern>/IndexLibro</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
